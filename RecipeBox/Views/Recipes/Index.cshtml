@{
  Layout="_Layout";
}

<nav class="navbar">
  <ul>
    <li>@Html.ActionLink("Home", "Index", "Home")</li>
    <li>@Html.ActionLink("Add a new recipe", "Create")</li>
  </ul>
</nav>

@using RecipeBox.Models;

<h1>Recipes for @User.Identity.Name</h1>

@if (@Model.Count == 0)
{
  <h3>Get Started by adding a recipe</h3>
}
else
{
  <ul>
    @foreach (Recipe recipe in Model)
    {
      <li>@Html.ActionLink($"{recipe.Name}", "Details", new { id = recipe.RecipeId })</li>
    }
  </ul>
}


@{
  Layout="_Layout";
}

<nav class="navbar">
  <ul>
    <li>@Html.ActionLink("Home", "Index", "Home")</li>
    <li>@Html.ActionLink("Back to Cuisine list", "Index")</li>
  </ul>
</nav>

@model RecipeBox.Models.Tag

<h2>Add Recipe to this Cuisine</h2>

<h4>Tag a recipe to this cuisine: @Html.DisplayFor(model => model.Cuisine)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.TagId)

  @Html.Label("Select Recipe")
  @Html.DropDownList("RecipeId")

  <input type="submit" value="Save" class="btn btn-danger"/>
}